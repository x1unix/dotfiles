# vim: set filetype=toml

# See: https://ghostty.org/docs/config/reference

shell-integration = detect

#theme = "dark:Apple System Colors,light:Apple System Colors Light"
theme = "dark:base16-dark,light:Apple System Colors Light"
font-family = "ZedMono NFM"
font-size = 11
# font-size = 14

macos-option-as-alt = true
macos-icon-frame = beige
macos-non-native-fullscreen = true
macos-window-shadow = false
window-decoration = none

clipboard-read=allow
clipboard-write=allow

cursor-style = block
cursor-style-blink = true

confirm-close-surface = true
mouse-hide-while-typing = true

# Toggle terminal
quick-terminal-screen=mouse
quick-terminal-animation-duration=0
quick-terminal-size = 100%,100%

# Keybinds
keybind = global:cmd+`=toggle_quick_terminal
keybind = ctrl+shift+comma=reload_config
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+plus=increase_font_size:1
keybind = ctrl+minus=decrease_font_size:1
keybind = ctrl+zero=reset_font_size
keybind = ctrl+shift+l=clear_screen

# TODO: use ghostty instead of tmux?
# keybind = ctrl+shift+x=new_split:down

keybind = ctrl+shift+t=new_tab
gtk-titlebar-style = native

# Disable useless and annoying bell
bell-features = no-audio,no-system,no-title,no-attention

# Disable annoying toasts
app-notifications = no-clipboard-copy

# Fix broken TERM env var
shell-integration-features = ssh-env
